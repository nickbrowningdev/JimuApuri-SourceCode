<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="JimuApuri.Views.WorkoutTimerView">
    <ContentPage.Content>
        <!-- scrollview -->
        <ScrollView>
            <!-- sets background as white -->
            <StackLayout BackgroundColor="White">

                <!-- displays time -->
                <Label x:Name="lblStopwatch" FontSize="45" TextColor="#0077be"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand">

                </Label>

                <!-- start time -->
                <Button x:Name="btnStart" Clicked="btnStart_Clicked" Text="Start"></Button>

                <!-- stop time -->
                <Button x:Name="btnStop" Text="Stop" Clicked="btnStop_Clicked"></Button>

                <!-- reset time -->
                <Button x:Name="btnReset" Text="Reset" Clicked="btnReset_Clicked"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
